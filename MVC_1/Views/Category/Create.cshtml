@model Category

<div class="d-flex flex-column align-items-center border w-50 m-auto p-2">
	<h1>Створення категорії</h1>
	<div class="w-100 p-5">
		<form asp-action="Create" method="post">
			<div class="form-group">
				<label for="name">Назва</label>
				<input asp-for="Name" class="form-control" placeholder="Введіть назву" />
			</div>
			<div class="d-flex justify-content-center">
				<input type="submit" value="Створити" class="btn btn-success flex-grow-1 m-3"></input>
				<a asp-action="Index" class="btn btn-dark flex-grow-1 m-3">Повертнутися</a>
			</div>
		</form>
	</div>
</div>