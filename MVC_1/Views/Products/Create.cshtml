@model CreateProductVM

<div class="d-flex flex-column align-items-center border w-50 m-auto p-2">
    <h1>Створити Продукт</h1>
    <div class="w-100 p-5">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Product.Name">Назва</label>
                <input asp-for="Product.Name" class="form-control" placeholder="Введіть назву" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description">Опис</label>
                <textarea asp-for="Product.Description" class="form-control" placeholder="Введіть опис"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price">Ціна</label>
                <input asp-for="Product.Price" type="number" class="form-control" placeholder="Введіть ціну" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Amount">Кількість</label>
                <input asp-for="Product.Amount" type="number" class="form-control" placeholder="Введіть кількість" />
                <span asp-validation-for="Product.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId">Категорія</label>
                <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control">
                    <option value="">Оберіть категорію</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="File">Зображення</label>
                <input asp-for="File" type="file" class="form-control"/>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Зберегти" class="btn btn-success flex-grow-1 m-3"/>
                <a asp-action="Index" class="btn btn-dark flex-grow-1 m-3">Повернутися</a>
            </div>
        </form>
    </div>
</div>
