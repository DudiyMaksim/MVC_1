@model EditProductVM

<div class="d-flex flex-column align-items-center border w-50 m-auto p-2">
    <h1>Редагування Продукта</h1>
    <div class="w-100 p-5">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="CurrentImage" />  <!-- Приховане поле для збереження поточної назви файлу -->

            <div class="form-group">
                <label asp-for="Product.Name">Назва</label>
                <input asp-for="Product.Name" type="text" class="form-control" placeholder="Введіть назву" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" type="text" class="form-control" placeholder="Введіть опис" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" type="number" class="form-control" placeholder="Введіть ціну" step="0.01"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Amount"></label>
                <input asp-for="Product.Amount" type="number" class="form-control" placeholder="Введіть кількість" />
                <span asp-validation-for="Product.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" type="file" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select class="form-select" asp-for="Product.CategoryId" asp-items="@Model.Categories">
                    <option value="">Оберіть категорію</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Зберегти" class="btn btn-success flex-grow-1 m-3"/>
                <a asp-action="Index" class="btn btn-dark flex-grow-1 m-3">Повернутися</a>
            </div>
        </form>
    </div>
</div>
